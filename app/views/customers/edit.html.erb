<div class="container">
  <div class="row">
    <div class="col-md-12 text-center"><h2>プロフィール編集</h2>
      <%= form_with model:@customer, local:true do |f| %>
      
      <p class= "inputName"><label for="inputName">Name</label></p>
      <div class="field">
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      </div>
      
      <p class= "inputImage"><label for="inputImage">ProfileImage</label></p>
      <div class="profile_image">
        <%= attachment_image_tag @customer, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
      </div>
      
      <div class="field">
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>
      
      <p class= "inputIntroduction"><label for="inputIntroduction">自己紹介</label></p>
      <div class="field">
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介"%>
      </div>
  
      <div class="profile_submit"><%= f.submit "変更を保存" %></div>
      <% end %>

    </div>
  </div>
</div>