<div class="search">
<%= search_form_for @search do |f| %>
  <%= f.search_field :caption_cont, placeholder: "キーワードを入力", required: true %>
  <%= f.submit "検索" %>
<% end %>
</div>


<div class="list-wrap">
<% if @search.conditions.present? %>
  <% @products.each do |product| %>
    <div class="list-box">
      <%= link_to item_path(product.id) do %>
        <%= attachment_image_tag product, :image, :fill, 200, 200, format: 'jpeg' %>
      <% end %>
    </div>
  <% end %>
<% end %>
</div>



