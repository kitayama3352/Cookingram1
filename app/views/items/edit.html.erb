<div class="container">
  <div class="row">
    <div class="col-md-12 text-center"><h2>投稿編集</h2>
      <%= form_with model:@item, url:"/items/#{@item.id}", local:true do |f| %>
      
        <div class="field">
          <%= attachment_image_tag @item, :image, :fill, 200, 200, fallback: "no_image.jpg"%>
        </div>
        <div class="field">
      　　　<%= f.attachment_field :image, placeholder: "商品画像" %>
        </div>
        <div class="field">
          <h4>商品名</h4>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <h4>商品紹介</h4>
          <%= f.text_area :caption %>
        </div>
      <%= f.submit '保存' %>
      <% end %>
    </div>
  </div>
</div>